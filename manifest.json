{
  "manifest_version": 3,
  "name": "MeetCaps",
  "version": "1.0.0",
  "description": "Record audio from Google Meet sessions",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting",
    "downloads",
    "notifications"
  ],
  "host_permissions": [
    "https://meet.google.com/*"
  ],
  "action": {
    "default_popup": "src/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"]
    }
  ]
} 